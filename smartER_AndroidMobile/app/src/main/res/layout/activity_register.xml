<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:text="Register"
            android:textSize="25dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/form_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="52dp"
            android:textColor="@color/colorBlack"
            android:text="Titles in blue are required, and Titles in pink are optional"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/form_hint"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:textColor="@color/colorPrimary"
            android:text="Username"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <EditText
            android:id = "@+id/username_input"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_below="@+id/username"
            android:hint="e.g.like white12897"/>

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_input"
            android:text="Password"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id = "@+id/password_input"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_below="@+id/password"
            android:inputType = "textPassword"
            android:hint="> 7 numbers+letters(case sensitive)"
            />

        <TextView
            android:id="@+id/rpt_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_input"
            android:text="Repeat Password"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id = "@+id/rpt_password_input"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_below="@+id/rpt_password"
            android:inputType = "textPassword"
            android:hint="same as password above"
            />

        <TextView
            android:id="@+id/first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rpt_password_input"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="First name"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <EditText
            android:id = "@+id/first_name_input"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_below="@+id/first_name"
            />
        <TextView
            android:id="@+id/surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_name_input"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="Surname"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id = "@+id/surname_input"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_below="@+id/surname"
            />
        <TextView
            android:id="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/surname_input"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="Date of Birth"
            android:textColor="@color/colorAccent"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <DatePicker
            android:id = "@+id/dob_input"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_below="@+id/dob"
            android:calendarViewShown="false"
            />
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dob_input"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="Address"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <EditText
            android:id = "@+id/address_input"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_below="@+id/address"
            android:hint="e.g. 56 High Street, Glen Iris"
            />
        <TextView
            android:id="@+id/postcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_input"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="Postcode"
            android:textColor="@color/colorAccent"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id = "@+id/postcode_input"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_below="@+id/postcode"
            android:hint="e.g.In VIC, start with 3 with 4 digits in total"
            />
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postcode_input"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="Email"
            android:textColor="@color/colorAccent"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id = "@+id/email_input"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_below="@+id/email"
            android:hint="e.g. abc@example.com"
            />
        <TextView
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_input"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="Mobile"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id = "@+id/mobile_input"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_below="@+id/mobile"
            android:hint="e.g. 04xxxxxxxx"
            />
        <TextView
            android:id="@+id/noofresidents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile_input"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="No of Residents"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <Spinner
            android:id="@+id/noofresidents_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noofresidents"
            android:entries="@array/noofresident_array"
            android:paddingBottom="@dimen/activity_vertical_margin"/>

        <TextView
            android:id="@+id/energyprovoder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noofresidents_input"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="Energy Provider"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <Spinner
            android:id="@+id/energyprovoder_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/energyprovoder"
            android:entries="@array/energyprovider_array"
            android:paddingBottom="@dimen/activity_vertical_margin"/>
        <Button
            android:id="@+id/register"
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/energyprovoder_input"
            android:layout_margin="@dimen/fab_margin" />
        <Button
            android:id="@+id/r_login"
            android:text="Back to Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/energyprovoder_input"
            android:layout_margin="@dimen/fab_margin"
            android:layout_alignRight="@+id/register"/>

        <TextView
            android:id="@+id/r_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:textColor="@color/colorBlack" />
    </RelativeLayout>
</ScrollView>